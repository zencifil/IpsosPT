<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/famCodeTextView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:maxLines="1"
        android:ellipsize="middle"
        android:text="01W1049"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/famNameTextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/famCodeTextView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="3dp"
        android:maxLines="1"
        android:text="TEST HANESI"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/famAddressTextView"
        android:layout_below="@id/famCodeTextView"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="15dp"
        android:text="TEST MAH. TEST CAD. TEST SOK. D 2 KADIKOY ISTANBUL"/>
</RelativeLayout>